<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel='stylesheet' href='/stylesheets/styleForMobileIndex.css' />
  <title>Mobile Gallery</title>
</head>

<body>
  <div class="content">
    <% if (user) {%>
      <ul>
        <li><a href="/mobiles" style="text-decoration: none; color: white;">All POSTS</a></li>
        <li><a href="/mobiles/addDevice" style="text-decoration: none; color: white;">ADD DEVICE</a></li>
        <li> <a href="/logout" style="text-decoration: none; color: white;">LOG OUT</a></li>
      </ul>
      <% } else {%>
        <ul>
          <li><a href="/auth/google" class="login" style="text-decoration: none; color: white;">LOG IN WITH </a>
          </li>
        </ul>
        <%}%>
          <br></br>
          <br>
          <div class="grid">
            <% 
              const reverse = mobiles;
              reverse.slice().reverse().forEach(function(m) { %>
              <div class="card">
                <img src='<%= m.deviceImage%>.jpg'
                  style="border:4px  #1b6b6f; width: 200px; height: 200px; border-radius: 10px;">
                <table style="width:22%">
                  <td style="font-size: 14px;">Onwer: </td>
                  <td style="text-align:left; font-size: 12px;">
                    <%= m.deviceOwner %>
                  </td>
                  <tr>
                    <td style="font-size: 14px;">Device: </td>
                    <td style="text-align:left; font-size: 12px;">
                      <%= m.deviceName %>
                    </td>
                  </tr>
                  <td style="font-size: 14px;">Price: </td>
                  <td style="text-align:left; font-size: 12px;">
                    <%= m.devicePrice %>
                  </td>
                </table>
                <button style="border-radius: 8px; color: rgb(211, 192, 192); background-color: rgb(47, 23, 0);">
                  <center><a href="/mobiles/<%= m._id %>" style="text-decoration:none; color: white">See More...</a></center>
                </button>
              </div>
              <% }); %>
          </div></br>
          </center>
  </div>
</body>
</html>